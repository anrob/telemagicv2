<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", clients_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_client_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", client_path %></li>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.client.first_name", :default => t("activerecord.labels.first_name", :default => "First name")) %>:</b>
          <%= @client.first_name %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.client.last_name", :default => t("activerecord.labels.last_name", :default => "Last name")) %>:</b>
          <%= @client.last_name %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.client.address", :default => t("activerecord.labels.address", :default => "Address")) %>:</b>
          <%= @client.address %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.client.address2", :default => t("activerecord.labels.address2", :default => "Address2")) %>:</b>
          <%= @client.address2 %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.client.city", :default => t("activerecord.labels.city", :default => "City")) %>:</b>
          <%= @client.city %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.client.state", :default => t("activerecord.labels.state", :default => "State")) %>:</b>
          <%= @client.state %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.client.zip", :default => t("activerecord.labels.zip", :default => "Zip")) %>:</b>
          <%= @client.zip %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.client.phone_number", :default => t("activerecord.labels.phone_number", :default => "Phone number")) %>:</b>
          <%= @client.phone_number %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.client.email_address", :default => t("activerecord.labels.email_address", :default => "Email address")) %>:</b>
          <%= @client.email_address %>
        </p>
      <div class="wat-cf">
        <%= link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_client_path(@client), :class => "button" %> 
        <%= link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), client_path(@client), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>      
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>